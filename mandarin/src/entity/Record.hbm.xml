<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="entity">
	<class name="Record">
		<id name="id" type="long">
			<generator class="native" />
		</id>
		<property name="readerId" type="long" not-null="true"/>
		<property name="bookId" type="long" not-null="true"/>
		<property name="fineValue" type="int" not-null="true"></property>
		<property name="payState" type="boolean" not-null="true"></property>
		<property name="borrowDate" not-null="true" />
		<property name="deadline" not-null="true" />
		<property name="returnDate" not-null="true" />
		<property name="reservationState" type="boolean" not-null="true"></property>
		<property name="borrowState" type="boolean" not-null="true"></property>
	</class>
</hibernate-mapping>