<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="entity">
	<class name="Book">
		<id name="id" type="long">
			<generator class="native" />
		</id>
		<property name="createTime" not-null="true"/>
		<property name="isbn" type="string" not-null="true" length="15"/>
		<property name="title" type="string" not-null="true" length="100"/>
		<property name="author" type="string" not-null="true" length="100"/>
		<property name="publisher" type="string" not-null="true" length="50"/>
		<property name="description" type="string" not-null="true" length="1000"/>
		<property name="reservationState" type="boolean"  not-null="true" />
		<property name="borrowState" type="boolean"  not-null="true" />
		<property name="location" type="string" not-null="true" length="50"/>
		<property name="price" type="string" not-null="true" length="10"/>
		<property name="imgpath" type="string" length="100"/>
	</class>
</hibernate-mapping>